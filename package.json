{
  "name": "bot-dashboard",
  "version": "1.0.0",
  "description": "A dashboard for monitoring bot uptime & events",
  "scripts": {
    "dev": "nx run-many -t dev -p @inc/client @inc/server",
    "test": "nx run-many -t test",
    "build": "nx run-many -t build",
    "build:packages": "nx run-many -t build -p @inc/ui @inc/events @inc/s3-simplified @inc/errors @inc/send-in-blue @inc/utils @inc/db @inc/db-enums --parallel=4",
    "cb": "nx run-many -t clean",
    "ci": "pnpm install --frozen-lockfile",
    "clean": "pnpx rimraf --glob */**/node_modules && pnpx rimraf node_modules",
    "lint": "nx run-many -t lint",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm prisma:generate && pnpm enum:copy && echo Please restart your VSCode to make your Prisma Client work."
  },
  "author": "Axiver",
  "devDependencies": {
    "@types/node": "20.1.4",
    "esbuild": "0.17.19",
    "esbuild-node-externals": "1.7.0",
    "eslint": "8.36.0",
    "nx": "16.1.4",
    "nx-cloud": "16.0.5",
    "symlink-dir": "^5.1.1",
    "sync-directory": "^6.0.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "5.0.2"
  }
}
